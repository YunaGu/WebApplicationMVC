@model WebApplication1.Models.UserInputModel

@{
    ViewData["Title"] = "Input";
}

<div class="text-center">
    <h1 class="display-4">Please type something here</h1>
    @* <p>There will be a textarea.</p> *@
    
    <form method="post">
        <label for="UserInput">Enter your input:</label>
        <textarea name="UserInput" id="UserInput" row="4" cols="50"></textarea>
        <button type="submit">Submit</button>
    </form>
    
    @* show the input *@
    @if (ViewData["UserInput"]!= null)
    {
        <p>input:</p>
        <p>@ViewData["UserInput"]</p>
    }
    
</div>